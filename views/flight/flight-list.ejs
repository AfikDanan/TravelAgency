<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/flight.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <%- include('../includes/searchBar.ejs') %>

                <main>
                    <% if (flights.length> 0) { %>
                        <div class="grid">
                            <% for (let flight of flights) { %>
                                <article class="card flight-item">
                                    <header class="card__header">
                                        <h1 class="flight__title">
                                            <%= flight.destination %>
                                        </h1>
                                    </header>
                                    <div class="card__image">
                                        <img src="<%= flight.imagePath %>" alt="<%= flight.destination %>">

                                    </div>
                                    <div class="card__content">
                                        <p class="flight__description" id='origin'>
                                            <strong>From:</strong>
                                            <%= flight.origin %><br>
                                                <strong>To:</strong>
                                                <%= flight.destination %></br>
                                        </p>

                                        <p class="flight__description" id='date'>
                                            <strong>Date:</strong>
                                            <%= flight.date.toDateString() %></br>
                                        </p>

                                        <p class="flight__description" id='takeOffTime'>
                                            <strong>Take Off:</strong>
                                            <%= flight.takeOffTime %></br>
                                        </p>

                                        <p class="flight__description" id='landing'>
                                            <strong>Landing:</strong>
                                            <%= flight.landing %></br>
                                        </p>

                                        <p class="flight__description" id='numOfSeats'>
                                            <strong>Available seats:</strong>
                                            <%= flight.numOfSeats %></br>
                                        </p>

                                        <h2 class="flight__price">price: $
                                            <%= flight.price %>
                                        </h2>
                                    </div>
                                    <div class="card__actions">
                                        <a href="/flights/<%= flight._id %>" class="btn"
                                            style="background-color:#749ea8;">Details</a>
                                        <%- include('../includes/add-to-cart.ejs', {flight: flight}) %>
                                    </div>

                                </article>
                                <% } %>
                        </div>

                        <% } else { %>
                            <h2>No flights Found!</h2>
                            <% } %>
                </main>
                <%- include('../includes/end.ejs') %>